<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Downloader.Desktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="450"
             x:Class="Downloader.Desktop.Views.DownloadsView"
             x:DataType="vm:DownloadsViewModel">

	
	<ScrollViewer x:Name="Root" Padding="5">
		<ItemsControl ItemsSource="{Binding DownloadItems}">
			<ItemsControl.ItemTemplate>
				<DataTemplate DataType="vm:DownloadItemViewModel">
					<Grid ColumnDefinitions="*, Auto">
						<CheckBox IsChecked="{Binding IsChecked}" Content="{Binding FileName}" />						
						<Button Grid.Column="1"
								Command="{Binding #Root.((vm:DownloadsViewModel)DataContext).RemoveItemCommand}"
								CommandParameter="{Binding .}">
							<PathIcon Data="{DynamicResource delete_regular}"
									  Height="15"
									  Foreground="Red" />
						</Button>
					</Grid>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
	</ScrollViewer>
</UserControl>
