<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Downloader.Desktop.ViewModels"
		xmlns:v="using:Downloader.Desktop.Views"
